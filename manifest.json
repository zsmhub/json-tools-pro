{
  "manifest_version": 3,
  "name": "JSON Tools Pro",
  "version": "0.0.6",
  "description": "A tool to format and compress JSON",
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": ["clipboardWrite", "tabs"],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "lib/highlight.min.js",
      "lib/json.min.js",
      "lib/github.min.css"
    ],
    "matches": ["<all_urls>"]
  }]
}